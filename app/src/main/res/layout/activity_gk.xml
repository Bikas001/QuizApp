<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="General Math Quiz"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Question 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1. The average of first 50 natural numbers is ………….? "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#091A3F"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/num_one_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. 25.30"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/transition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. 25.5"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. 25.00"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. 12.25"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question  2-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2. A fraction which bears the same ratio to 1/27 as 3/11 bear to 5/9 is equal to ………..? "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#091A3F"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/num_one_radio_group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. 1/55"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/transition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. 55"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. 3/11"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. 1/11"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3. The number of 3-digit numbers divisible by 6, is ………….. .?"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#091A3F"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/num_one_radio_group3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A. 149"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/transition3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B. 166"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C. 150"
                    android:textSize="16sp" />

                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D. 151"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4. The average of first 50 natural numbers is ………….? "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#091A3F"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="please enter your answer"
                android:inputType="text"/>

            <!-- Question 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="5. Which of the following numbers gives 240 when added to its own square? "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#091A3F"
                android:textStyle="bold" />

            <!--        <CheckBox-->
            <!--            android:id="@+id/a"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="15"-->
            <!--            android:textSize="16sp" />-->

            <!--        <CheckBox-->
            <!--            android:id="@+id/b"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="16"-->
            <!--            android:textSize="16sp" />-->

            <!--        <CheckBox-->
            <!--            android:id="@+id/c"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:text="18"-->
            <!--            android:textSize="16sp" />-->

            <!--        <CheckBox-->
            <!--            android:id="@+id/d"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_marginBottom="16sp"-->
            <!--            android:text="20"-->
            <!--            android:textSize="16sp" />-->

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>